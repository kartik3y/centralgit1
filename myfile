---
- name: automation	
  hosts: "{{ hosts }}"
  become: true
  gather_facts: yes
  vars_prompt:
    - name: "vars_file"
      prompt: "Which var file do you want to use? (dev/test/prod)  
      private: no


- name: Update webservers
  hosts: all
  remote_user: root
  

  tasks:
    - name: Apache update
      ansible.builtin.yum: 
      name: httpd
      state: latest

- name: Apache conflict file
  ansiblebuildin.template:
  src: srv/httpd.j2
  dest: /etc/httpd.conf

- name: Update on OFAC Program line
  lineinfile:
    path: /{{ARC_CUST_TOP}}/bin/arc_ofac_sql.prog
    regexp: "^\\$ARC*"
    line: "#ARC_CUST_TOP/bin/arc_ofac_ftp"
    backrefs: yes
    state: present
  register: k
  tags:
    - gg
  - debug:
    var: k

- name: create a file
  tasks: 
  - name: Creating a empty file
    file:
      path: /home/kartikey
      state: touch

- name: copy a file
  command: mv /root/mumbaigit/myfile to /root/londongit


